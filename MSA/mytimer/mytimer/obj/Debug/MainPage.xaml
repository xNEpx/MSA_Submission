<Page
    x:Class="mytimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mytimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/flowers-pink.png" Stretch="Fill"/>
        </Grid.Background>
        <Image x:Name="image" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="btnCountDown" Content="Start" HorizontalAlignment="Center" Margin="543,466,543,265" VerticalAlignment="Center" Height="37" Width="280"/>
        <TextBlock x:Name="lblCountDown1" HorizontalAlignment="Center" Margin="233,320,233,364" TextWrapping="Wrap" VerticalAlignment="Center" Height="104" Width="900" FontSize="66.667" FontWeight="Bold" TextAlignment="Center" Foreground="White"/>
        <TextBox x:Name="Hour" HorizontalAlignment="Center" Margin="546,418,756,318" TextWrapping="Wrap" VerticalAlignment="Center" PlaceholderText="Hour" Width="70"/>
        <TextBox x:Name="Min" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Center" PlaceholderText="Minute" Width="70"/>
        <TextBox x:Name="Sec" HorizontalAlignment="Center" Margin="748,418,546,318" TextWrapping="Wrap" VerticalAlignment="Center" PlaceholderText="Second" Width="70"/>
        <Button x:Name="btnCountDown_Copy" Content="Stop" HorizontalAlignment="Center" Margin="543,519,543,212" VerticalAlignment="Center" Height="37" Width="280"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,-300,0,0" TextWrapping="Wrap" Text="Timer" VerticalAlignment="Center" Height="110" Width="506" Background="{x:Null}" Foreground="White" FontSize="106.667" TextAlignment="Center" FontFamily="Iskoola Pota" BorderBrush="{x:Null}"/>
        <MediaElement x:Name="MediaTool" HorizontalAlignment="Left" Height="100" Margin="1133,272,0,0" VerticalAlignment="Top" Width="100" Source="Assets/Old-clock-ringing-short.mp3" AutoPlay="False"/>

    </Grid>
</Page>

